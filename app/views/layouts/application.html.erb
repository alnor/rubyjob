</head>
<body>

<div class="page">
	<div class ="MainMenu" >
		<ul id="main-tr"> 
		  <li><%= link_to t(:main_menu_main),{:controller => 'main',:action=>'index'},{:id=>"main" }%></li>
		  <li><%= link_to t(:main_vacancies),{:controller => 'vacancies',:action=>'index'},{:id=>"vacancies" }%></li>
